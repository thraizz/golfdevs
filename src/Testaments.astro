---
// Testimonials
const testimonials = [
  {
    quote:
      "This community has been amazing for connecting with other developers who share my passion for golf.",
    name: "Jane Doe",
    role: "Frontend Developer",
    avatar: "https://randomuser.me/api/portraits/women/12.jpg",
  },
  {
    quote:
      "I found my current job through a connection I made in the Golf Devs Discord!",
    name: "John Smith",
    role: "Full Stack Engineer",
    avatar: "https://randomuser.me/api/portraits/men/32.jpg",
  },
];
---

<!-- Testimonials -->
<section class="py-24 bg-[#121212] border-t border-[#333333]">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl md:text-4xl font-bold text-center mb-3 text-gray-100">
      What Our Members Say
    </h2>
    <p class="text-lg text-gray-400 max-w-3xl mx-auto text-center mb-10">
      Hear from our community members about their experiences
    </p>

    <div class="grid md:grid-cols-2 gap-10">
      {
        testimonials.map((testimonial) => (
          <div class="bg-[#1E1E1E] rounded-md shadow-md hover:shadow-lg transition-all duration-300 p-8 relative transition-transform duration-300 hover:-translate-y-2 border border-[#333333]">
            <div class="absolute top-6 right-8 text-[#4ADE80] opacity-20 text-8xl font-serif">
              "
            </div>
            <p class="italic text-gray-300 mb-8 text-lg relative z-10">
              {testimonial.quote}
            </p>
            <div class="flex items-center">
              <div class="w-14 h-14 rounded-full overflow-hidden shadow-md border border-[#333333]">
                <img
                  src={testimonial.avatar}
                  alt={testimonial.name}
                  class="w-full h-full object-cover"
                />
              </div>
              <div class="ml-4">
                <p class="font-semibold text-gray-200">{testimonial.name}</p>
                <p class="text-sm text-gray-400">{testimonial.role}</p>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
